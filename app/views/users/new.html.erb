<%= stylesheet_link_tag 'application' %>

<% provide(:title, 'Sign up') %>
<h1 align="center">Sign up</h1>

<div class="center">
  <div id="signup_form">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Create my account", id: 'submit' %>
    <% end %>
  </div>
</div>