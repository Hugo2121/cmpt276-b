<!DOCTYPE html>
<html>
  <head>
    <title>Udio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<header>
      <div>
      	<div class="header">
      		<h1> Udio</h1>
        	<%= link_to image_tag("notebook.png", :alt => "Udio logo", :id => "logo"), {action: 'index', controller: 'sessions'} %>
      	</div>

        <nav>
          <ul>
            <li><%= link_to "Home",   '/sessions/index' %></li>
            <li><%= link_to "Sell", '/sell' %></li>
            <li><%= link_to "Buy", '#' %></li>
            <li><%= link_to "About", '#' %></li>
            <li><%= link_to "Log in", '/login' %></li>
            <li><%= link_to "Sign up", '/signup' %></li>
	    <% if current_user %>
	        <li><%= link_to "Sign out", signout_path, id: "sign_out" %> </li>
		<li>Signed in as <strong><%= current_user.name %></strong>!</li>
	    <% end %> 

          </ul>
        </nav>
      </div>
    </header>
    <div>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
